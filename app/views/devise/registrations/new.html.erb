<div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
  <div class="card shadow-lg p-4" style="max-width: 400px; width: 100%; background-color: #f8f9fa;">
    <h2 class="text-center mb-4">新規登録</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "needs-validation" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="mb-3">
        <%= f.label :email, "メールアドレス", class: "form-label fw-bold" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= f.label :password, "パスワード", class: "form-label fw-bold" %>
        <% if @minimum_password_length %>
          <small class="text-muted">(最低<%= @minimum_password_length %>文字)</small>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= f.label :password_confirmation, "パスワード（確認用）", class: "form-label fw-bold" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="d-grid">
        <%= f.submit "登録する", class: "btn btn-primary btn-lg" %>
      </div>
    <% end %>

    <div class="text-center mt-3">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
